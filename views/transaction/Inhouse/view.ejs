                                    <script>
                                        document.getElementById('addPaymentBtn').addEventListener('click', function() {
                                            const dateInput = document.getElementById('paymentDate');
                                            const amountInput = document.getElementById('paymentAmount');
                                            const date = dateInput.value;
                                            const amount = parseFloat(amountInput.value.replace(/[^0-9.-]+/g,""));

                                            if (date && !isNaN(amount)) {
                                                const table = document.getElementById('paymentTable').getElementsByTagName('tbody')[0];
                                                const newRow = table.insertRow();
                                                newRow.innerHTML = `
                                                    <td>${date}</td>
                                                    <td>Php. ${amount.toFixed(2)}</td>
                                                    <td>
                                                        <button class="btn btn-danger btn-sm deletePaymentBtn"><i class="bi bi-trash"></i></button>
                                                    </td>
                                                `;
                                                addDeletePaymentEvent(newRow.querySelector('.deletePaymentBtn'));
                                                updateTotalPayment();
                                                dateInput.value = '';
                                                amountInput.value = '';
                                            }
                                        });

                                        function addDeletePaymentEvent(button) {
                                            button.addEventListener('click', function() {
                                                const row = button.closest('tr');
                                                row.parentNode.removeChild(row);
                                                updateTotalPayment();
                                            });
                                        }

                                        function updateTotalPayment() {
                                            let total = 0;
                                            document.querySelectorAll('#paymentTable tbody tr').forEach(row => {
                                                const amountCell = row.cells[1];
                                                const amount = parseFloat(amountCell.textContent.replace(/[^0-9.-]+/g,""));
                                                if (!isNaN(amount)) {
                                                    total += amount;
                                                }
                                            });
                                            document.getElementById('totalPayment').textContent = `Php. ${total.toFixed(2)}`;
                                        }
                                    </script>
                                        <h5 class="card-title mx-3">Payment History</h5>
