<div class="modal fade" id="cCreateModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Client</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Nav tabs -->
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-Individual-tab" data-bs-toggle="pill" data-bs-target="#pills-individual" type="button" role="tab" aria-selected="true">Individual</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-Corporate-tab" data-bs-toggle="pill" data-bs-target="#pills-corporate" type="button" role="tab" aria-selected="false">Corporate</button>
                    </li>
                </ul>
                <div class="tab-content pt-2" id="myTabContent">
                    <!-- Individual -->
                    <div class="tab-pane fade show active" id="pills-individual" role="tabpanel" aria-labelledby="home-tab">
                        <form class="needs-validation" id="cCreateIndividual" novalidate enctype="multipart/form-data">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input id="cciName" type="text" class="form-control"placeholder="Name" required>
                                    <label for="cciName">*Name</label>
                                </div>
                            </div>
                            <div class="col-12 my-3">
                                <div class="form-floating">
                                    <textarea id="cciAddress" class="form-control" placeholder="Address" style="height: 100px;"></textarea>
                                    <label for="cciAddress">Address</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 my-3">
                                    <div class="form-floating">
                                        <input id="cciEmail" type="email" class="form-control" placeholder="Email">
                                        <label for="cciEmail">Email</label>
                                    </div>
                                </div>
                                <!-- gender -->
                                <div class="col-md-3 my-3 d-flex align-items-center">
                                    <label for="cciGender" class="form-label me-3">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="cciGender" value="true" required>
                                        <label class="form-check-label" for="genderMale">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="cciGender" value="false" required>
                                        <label class="form-check-label" for="genderFemale">Female</label>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group my-3 cciContactNumberGroup">
                                <span class="input-group-text">Contact Number</span>
                                <input type="text" class="form-control cciContactNumber" required>
                                <button class="btn btn-success cciContactNumberAdd" type="button"><i class="bi bi-plus-square"></i></button>
                                <button class="btn btn-danger cciContactNumberDelete" type="button"><i class="bi bi-trash"></i></button>
                            </div>
                            <div class="col-md-12 my-3">
                                <div class="form-floating">
                                    <textarea id="cciNotes" type="date" class="form-control" placeholder="Notes" style="height: 100px;"></textarea>
                                    <label for="cciNotes">Notes</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                    <!-- Corporate -->
                    <div class="tab-pane fade" id="pills-corporate" role="tabpanel" aria-labelledby="profile-corporate">
                        <form class="needs-validation" id="cCreateCorporate" novalidate enctype="multipart/form-data">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input id="cccName" type="text" class="form-control" placeholder="Company Name" required>
                                    <label for="cccName">*Company Name</label>
                                </div>
                            </div>
                            <div class="col-12 my-3">
                                <div class="form-floating">
                                    <textarea id="cccAddress" class="form-control" placeholder="Address" style="height: 100px;"></textarea>
                                    <label for="cccAddress">Address</label>
                                </div>
                            </div>
                            <div class="input-group my-3 cccContactPersonGroup">
                                <span class="input-group-text">Contact Person</span>
                                <input type="text" class="form-control cccContactPerson" required>
                                <span class="input-group-text">Contact Number</span>
                                <input type="text" class="form-control cccContactNumber" required>
                                <button class="btn btn-success cccContactAdd" type="button"><i class="bi bi-plus-square"></i></button>
                                <button class="btn btn-danger cccContactDelete" type="button"><i class="bi bi-trash"></i></button>
                            </div>
                            <div class="col-md-12 my-3">
                                <div class="form-floating">
                                    <input id="cccEmail" type="email" class="form-control" placeholder="Email">
                                    <label for="cccEmail">Email</label>
                                </div>
                            </div>
                            <div class="col-md-12 my-3">
                                <div class="form-floating">
                                    <textarea id="cccNotes" type="date" class="form-control" placeholder="Notes" style="height: 100px;"></textarea>
                                    <label for="cccNotes">Notes</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

