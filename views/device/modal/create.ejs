<div class="modal fade" id="dCreateModal" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Device Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="dCreate" novalidate enctype="multipart/form-data">
                    <div class="row g-3 mb-1 align-items-center">
                        <div class="col-auto">
                          <label for="dcProfile" class="col-form-label">Image</label>
                        </div>
                        <div class="col-10">
                          <input type="file" id="dcProfile" class="form-control">
                        </div>
                    </div>
                    <div class="row g-3 mb-1 align-items-center">
                        <div class="col-auto">
                          <label for="dcBrand" class="col-form-label">Brand</label>
                        </div>
                        <div class="col-10">
                          <input type="text" id="dcBrand" class="form-control">
                        </div>
                    </div>
                    <div class="row g-3 mb-1 align-items-center">
                        <div class="col-auto">
                          <label for="dcModel" class="col-form-label">Model</label>
                        </div>
                        <div class="col-10">
                          <input type="text" id=dcModel" class="form-control">
                        </div>
                    </div>
                    <div class="row g-3 mb-1 align-items-center">
                        <div class="col-auto">
                          <label for="dcDescription" class="col-form-label">Description</label>
                        </div>
                        <div class="col-9">
                          <textarea type="text" id="dcDescription" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

