<%- include("../partials/header") %>
<%- include("../partials/loading") %>
<%- include("../partials/header-sidebar") %>
<!--================ PREFIX LEGENDS ====================-->
<!--================ ei = employee =================information -->
<main id="main" class="main">
    <div class="pagetitle">
    <h1>Employees</h1>
    <nav>
        <ol class="breadcrumb">
        <li class="breadcrumb-item"> <a href="/">Home</a></li>
        <li class="breadcrumb-item"> <a href="/employees">Employees</a></li>
        <li class="breadcrumb-item active">Employees</li>
        </ol>
    </nav>
    </div><!-- End Page Title -->
    <section class="section profile">
        <div class="row d-flex">
            <!-- Profile Picture & Basic Info -->
            <div class="col-lg-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img id="cvProfileImg" src="/assets/img/profile-img.jpg" alt="Profile" 
                             class="rounded-circle img-fluid border border-3 border-primary shadow" width="120">
                        
                        <h5 class="mt-3 text-center">John Doe</h5>
                        <p class="text-muted text-center">Software Engineer</p>
                        
                        <!-- Social Media Icons -->
                        <div class="d-flex justify-content-center gap-3 mt-2">
                            <a href="#" class="text-primary"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="text-info"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="text-danger"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="text-secondary"><i class="bi bi-linkedin"></i></a>
                        </div>
    
                        <!-- Contact Button -->
                        <button class="btn btn-outline-primary mt-3 w-75">Contact</button>
                    </div>
                </div>
            </div>
                
            <!-- Profile Details -->
            <div class="col-lg-9">
                <div class="card shadow-sm border-0">
                    <div class="card-body pt-3">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">Profile Information</h5>
                            <button type="button" class="btn btn-success m-3" data-bs-toggle="modal" data-bs-target="#eEditEmployee">
                                <i class="bi bi-file-earmark-plus"></i> Edit
                            </button>
                        </div>
                        
                        
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                              <button class="nav-link active" id="summary-tab" data-bs-toggle="tab" data-bs-target="#summary" type="button" role="tab" aria-controls="summary" aria-selected="true">Update</button>
                            </li>
                            <li class="nav-item" role="presentation">
                              <button class="nav-link" id="parts-tab" data-bs-toggle="tab" data-bs-target="#parts" type="button" role="tab" aria-controls="parts" aria-selected="false">Parts</button>
                            </li>
                        </ul>
                        
                        
    
                        <!--============== PROFILE INFORMATION ACCORDION ================-->
                        <div class="accordion mt-3" id="profileInformationAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="personalDataHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#personalDataCollapse" aria-expanded="false" aria-controls="personalDataCollapse">
                                        Personal Data
                                    </button>
                                </h2>
                                <h2 class="accordion-header" id="educationalBackgroundHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#educationalBackgroundCollapse" aria-expanded="false" aria-controls="educationalBackgroundCollapse">
                                        Educational Background
                                    </button>
                                </h2>
                                <h2 class="accordion-header" id="employeeRecordHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#employeeRecordCollapse" aria-expanded="false" aria-controls="employeeRecordCollapse">
                                        Employee Record
                                    </button>
                                </h2>
                                <h2 class="accordion-header" id="characterReferenceHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#characterReferenceCollapse" aria-expanded="false" aria-controls="characterReferenceCollapse">
                                        Character Reference
                                    </button>
                                </h2>
                            </div>

                            <form>
                                <div id="personalDataCollapse" class="collapse " data-bs-parent="#personalDataAccordion">
                                    <div class="accordion-body">
                                        <div class="tab-content" id="myTabContent">
                                            <div class="card p-3">
                                                <div class="row mb-2">
                                                    <div class="col-md-5">
                                                        <strong>Name:</strong>
                                                        <span class="form-control-plaintext" id="eiName">Luke</span>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <strong>Job:</strong>
                                                        <span class="form-control-plaintext" id="eiJob">Intern</span>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <strong>Age:</strong>
                                                        <span class="form-control-plaintext" id="eiAge">13</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <strong>Address:</strong>
                                                        <span class="form-control-plaintext" id="eiAddress">Imus</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <strong>Contact Number:</strong>
                                                        <span class="form-control-plaintext" id="eiContactNumber">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <strong>Place of Birth:</strong>
                                                        <span class="form-control-plaintext" id="eiPlaceofBirth">0123</span>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <strong>Date of Birth:</strong>
                                                        <span class="form-control-plaintext" id="eiDateofBirth">0123</span>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <strong>Height:</strong>
                                                        <span class="form-control-plaintext" id="eiHeight">0123</span>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <strong>Weight:</strong>
                                                        <span class="form-control-plaintext" id="eiWeight">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-5">
                                                        <strong>Religion:</strong>
                                                        <span class="form-control-plaintext" id="eiReligion">0123</span>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <strong>Citizenship:</strong>
                                                        <span class="form-control-plaintext" id="eiCitizenship">0123</span>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <strong>Civil Status:</strong>
                                                        <span class="form-control-plaintext" id="eiCivilStatus">0123</span>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <strong>Gender:</strong>
                                                        <span class="form-control-plaintext" id="eiGender">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <strong>Spouse:</strong>
                                                        <span class="form-control-plaintext" id="eiSpouse">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <strong>Children:</strong>
                                                        <span class="form-control-plaintext" id="eiChildrenNames">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <strong>Mother's Name:</strong>
                                                        <span class="form-control-plaintext" id="eiMotherName">0123</span>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <strong>Occupation:</strong>
                                                        <span class="form-control-plaintext" id="eiMotherOccupation">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <strong>Father's Name:</strong>
                                                        <span class="form-control-plaintext" id="eiFatherName">0123</span>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <strong>Occupation:</strong>
                                                        <span class="form-control-plaintext" id="eiFatherOccupation">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <strong>Parent's Address:</strong>
                                                        <span class="form-control-plaintext" id="eiParentAddress">0123</span>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <strong>Contact Number:</strong>
                                                        <span class="form-control-plaintext" id="eiParentContactNumber">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <strong>Contact Person:</strong>
                                                        <span class="form-control-plaintext" id="eiContactPersonName">0123</span>
                                                    </div>
                                                    <div class="col-md-5">
                                                        <strong>Contact Person Number:</strong>
                                                        <span class="form-control-plaintext" id="eiContactPersonNumber">0123</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <strong>Contact Address:</strong>
                                                        <span class="form-control-plaintext" id="eiContactPersonAddress">0123</span>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            
                                            
                                        </div>
                                    </div>       
                                </div>  
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    
    

</main><!-- End #main -->
