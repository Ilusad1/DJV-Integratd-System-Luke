<%- include("../partials/header") %>
<div class="container pt-1">
    <h3 class="mt-4">Warehouse Settings</h3>
    <div class="accordion accordion-flush">
        <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-MaterialType" aria-expanded="false" aria-controls="flush-collapseOne">
                Matterial Type
            </button>
        </h2>
            <div id="flush-MaterialType" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body ">
                    <div class="d-flex flex-row-reverse">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-success btn-sm mb-1 " data-bs-toggle="modal" data-bs-target="#modCrtClntType">
                            Add Client Type
                        </button>
                    </div>
                
                    <!-- Modal -->
                    <div class="modal fade" id="modCrtClntType" tabindex="-1" aria-labelledby="modCrtClntTypeLbl" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modCrtClntTypeLbl">Add Client Type</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="crtMatType" class="needs-validation" novalidate>
                                        <div class="row g-3 align-items-center">
                                            <div class="col-auto">
                                            <label for="crtMatTypeNm" class="col-form-label">Material Type: </label>
                                            </div>
                                            <div class="col-auto">
                                            <input type="text" id="crtMatTypeNm" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-around">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" name="crtMatTypeSerialized" type="radio" value="true" required>
                                                <label class="form-check-label">Serialized</label>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" name="crtMatTypeSerialized" type="radio" value="false" required>
                                                <label class="form-check-label">Non-serialized</label>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary" >Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <strong>
                                Material Type List
                            </strong>
                        </div>
                        <ul class="list-group list-group-flush" id="matTypeLst">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-MaterialBrand" aria-expanded="false" aria-controls="flush-collapseOne">
                Material Brand
            </button>
        </h2>
            <div id="flush-MaterialBrand" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body ">
                    <div class="d-flex flex-row-reverse">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-success btn-sm mb-1 " data-bs-toggle="modal" data-bs-target="#modCrtMatBrand">
                            Add Material Brand
                        </button>
                    </div>
                
                    <!-- Modal -->
                    <div class="modal fade" id="modCrtMatBrand" tabindex="-1" aria-labelledby="modCrtMatBrandLbl" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modCrtMatBrandLbl">Add Material Brand</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="crtMatBrand" class="needs-validation" novalidate>
                                        <div class="row g-3 align-items-center pb-1">
                                            <div class="col-auto">
                                            <label for="crtMatBrandNm" class="col-form-label">Material Brand: </label>
                                            </div>
                                            <div class="col-auto">
                                            <input type="text" id="crtMatBrandNm" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary" >Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <strong>
                                Material Brand List
                            </strong>
                        </div>
                        <ul class="list-group list-group-flush" id="matBrandLst">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/script") %>
<%- include("../partials/flash") %>
    <script src="/js/crud.js"></script>
    <script src="/js/settings/warehouse.js"></script>
    <script src="/js/validation.js"></script>
<%- include("../partials/footer") %>