<%- include("../partials/header") %>
<div class="container pt-1">
    <h3 class="mt-4">Service Settings</h3>
    <div class="accordion accordion-flush" id="accServiceSetting">
        <!-- service Category -->
        <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flushServiceCat" aria-expanded="false" aria-controls="flushServiceCat">
                <h6>
                    Service Category
                </h6>
            </button>
        </h2>
            <div id="flushServiceCat" class="accordion-collapse collapse" data-bs-parent="#accServiceSetting">
                <div class="accordion-body ">
                    <div class="container">
                        <div class="d-flex flex-row-reverse">
                            <button type="button" class="btn btn-success btn-sm my-2 " data-bs-toggle="modal" data-bs-target="#modCrtServiceCat">
                                Add Service Category
                            </button>
                        </div>
                        <table id="tblServiceCatLst" class="table table-sm table-bordered ">
                            <thead>
                                <tr class="text-center">
                                    <th>Category</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="tblServiceCatLstTBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- service Type -->
        <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flushServiceType" aria-expanded="false" aria-controls="flushServiceType">
                <h6>
                    service Type
                </h6>
            </button>
        </h2>
            <div id="flushServiceType" class="accordion-collapse collapse" data-bs-parent="#accServiceSetting">
                <div class="accordion-body ">
                    <div class="container">
                        <div class="d-flex flex-row-reverse">
                            <button type="button" id="crtServiceTypeBtn" class="btn btn-success btn-sm my-2 " data-bs-toggle="modal" data-bs-target="#modCrtServiceType">
                                Add Service Type
                            </button>
                        </div>
                        <table id="tblServiceTypeLst" class="table table-sm table-bordered ">
                            <thead>
                                <tr class="text-center">
                                    <th>Category</th>
                                    <th>Type</th>
                                    <th>Ticket</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="tblServiceTypeLstTBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("modal/mod-service") %>
<%- include("../partials/script") %>
<%- include("../partials/toaster") %>
    <script src="/js/crud.js"></script>
    <script src="/js/settings/service.js"></script>
    <script src="/js/validation.js"></script>
<%- include("../partials/footer") %>