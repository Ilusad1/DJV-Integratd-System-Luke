<!-- add device -->
<div class="modal fade" id="modViewClntAddDevice" tabindex="-1" role="dialog" aria-labelledby="modViewClntAddDeviceLbl" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modViewClntAddDeviceLbl">Add Client Device</h5>
                <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form  id="viewClntAddDevice" class="needs-validation" novalidate>
                    <div class="input-group input-group-sm my-1">
                        <label class="input-group-text col-2 d-flex justify-content-center" for="viewClntAddDeviceType">Type</label>
                        <select class="form-select" id="viewClntAddDeviceType" required>
                        </select>
                    </div>
                    <div class="input-group input-group-sm my-1">
                        <label class="input-group-text col-2 d-flex justify-content-center" for="viewClntAddDeviceBrand">Brand</label>
                        <select class="form-select" id="viewClntAddDeviceBrand" required>
                        </select>
                    </div>
                    <div class="input-group input-group-sm my-1">
                        <span class="input-group-text col-2 d-flex justify-content-center" id="viewClntAddDeviceModelLbl">Model</span>
                        <input type="text" class="form-control" id="viewClntAddDeviceModel" aria-describedby="viewClntAddDeviceModelLbl" required>
                    </div>
                    <div class="input-group input-group-sm my-1">
                        <span class="input-group-text col-2 d-flex justify-content-center" id="viewClntAddDeviceSNlLbl">SN</span>
                        <input type="text" class="form-control" id="viewClntAddDeviceSN" aria-describedby="viewClntAddDeviceSNlLbl" required>
                    </div>
                    <!-- Dynamica add parts serial number -->
                    <div class="card card-body p-1">
                        <strong>
                            Parts Serial Number: 
                        </strong>
                        <a id="viewClntAddDeviceAddPartSNBtn" class="btn btn-primary btn-sm d-flex justify-content-center mt-2">Add Parts SN</a>
                    </div>
                    <div class="input-group input-group-sm my-1">
                        <span class="input-group-text col-2 d-flex justify-content-center" id="viewClntAddDeviceOtherDetailsLbl">Other Details</span>
                        <input type="text" class="form-control" id="viewClntAddDeviceOtherDetails" aria-describedby="viewClntAddDeviceOtherDetailsLbl">
                    </div>
                    <div class="modal-footer p-0">
                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success btn-sm">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
