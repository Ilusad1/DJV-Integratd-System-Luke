                <div class="card card-body">
                    <div class="dltDevBody">
                        <div class="row">
                            <div class="col-3">
                                <strong>Type: </strong> 
                            </div>
                            <div class="col-9">
                                <span id="dltDevType"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <strong>Brand: </strong> 
                            </div>
                            <div class="col-9">
                                <span id="dltDevBrand"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <strong>Model: </strong> 
                            </div>
                            <div class="col-9">
                                <span id="dltDevModel"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <strong>SN: </strong> 
                            </div>
                            <div class="col-9">
                                <span id="dltDevSN"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <form  id='dltDev' class='needs-validation' novalidate>
                    Please type <strong>DELETE</strong> to confirm.
                    <div class="input-group input-group-sm my-1">
                        <span class="input-group-text col-2 d-flex justify-content-center" id="dltDevConfirmLbl">Confirmation</span>
                        <input type="text" class="form-control" id="dltDevConfirm" aria-describedby="dltDevConfirmLbl" required>
