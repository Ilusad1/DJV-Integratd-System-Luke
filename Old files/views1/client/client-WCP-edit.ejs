<%- include("../partials/header") %>
    <div class="container">
        <div class="mt-4">
            <form  id="edtClntWCP" class="needs-validation" novalidate enctype="multipart/form-data">
                <div id="edtClntWCPClient" class="card card-body p-1 my-1 mt-3 shadow p-3 mb-5 bg-white">
                    <div class="row">
                        <div class="col-3">
                            <img id="edtClntWCPAvatarImg" class="img-thumbnail" style="width: 100%; height: 15rem;" data-bs-toggle="modal" data-bs-target="#modImgPreview">
                        </div>
                        <div class="col-9">
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWCPAvatarFileLbl">Profile Picture</span>
                                <input type="file" class="form-control" id="edtClntWCPAvatarFile" name="edtClntWCPAvatarFile" aria-describedby="edtClntWCPAvatarFileLbl">
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWCPTypeLbl">Client Type</span>
                                <input type="text" class="form-control" id="edtClntWCPType" aria-describedby="edtClntWCPTypeLbl" disabled>
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWCPNmLbl">Client Name</span>
                                <input type="text" class="form-control" id="edtClntWCPNm" aria-describedby="edtClntWCPNmLbl" required>
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 justify-content-center" id="edtClntWCPOtherDetLbl">Other Details</span>
                                <textarea class="form-control" id="edtClntWCPOtherDet" aria-describedby="edtClntWCPOtherDetLbl"></textarea>
                            </div>
                            <!-- client address -->
                            <div class="card card-body my-1">
                                <a id="edtClntWCPAddressAdd" class="btn btn-primary btn-sm d-flex justify-content-center mt-2">Create additional Address</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Contact person -->
                <strong>Contact Person</strong>
                <a id="edtClntWCPContPerAdd" class="btn btn-primary btn-sm d-flex justify-content-center mt-2">Create Additional Contact person</a>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" id="edtClntWCPClose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-sm btn-success">Update Client</button>
                </div>
            </form>
        </div>
    </div>

    <%- include("../partials/script") %>
    <%- include("../partials/toaster") %>
    <%- include("../partials/imgPreview") %>
    <script src="/js/validation.js"></script>
    <script src="/js/crud.js"></script>
    <script src="/js/client/client-WCP-edit.js"></script>
<%- include("../partials/footer") %>