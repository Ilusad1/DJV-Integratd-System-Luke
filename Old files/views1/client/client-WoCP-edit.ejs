<%- include("../partials/header") %>
    <div class="container">
        <div class="mt-4">
            <form  id="edtClntWoCP" class="needs-validation" novalidate enctype="multipart/form-data">
                <strong>Client</strong>
                <div class="card card-body p-1 my-1 mt-3 shadow p-3 mb-5 bg-white">
                    <div class="row">
                        <div class="col-3">
                            <img id="edtClntWoCPAvatarImg" class="img-thumbnail" style="width: 100%; height: 15rem" data-bs-toggle="modal" data-bs-target="#modImgPreview">
                        </div>
                        <div class="col-9">
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWoCPAvatarFileLbl">Profile Picture</span>
                                <input type="file" class="form-control" name="edtClntWoCPAvatarFile" aria-describedby="edtClntWoCPAvatarFileLbl">
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWoCPTypeLbl">Client Type</span>
                                <input type="text" class="form-control" id="edtClntWoCPType" aria-describedby="edtClntWoCPTypeLbl" disabled>
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWoCPFistNmLbl">First Name</span>
                                <input type="text" class="form-control" id="edtClntWoCPFistNm" aria-describedby="edtClntWoCPFistNmLbl" required>
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWoCPLastNmLbl">Last Name</span>
                                <input type="text" class="form-control" id="edtClntWoCPLastNm" aria-describedby="edtClntWoCPLastNmLbl" required>
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWoCPMidNmLbl">Middle Name</span>
                                <input type="text" class="form-control" id="edtClntWoCPMidNm" aria-describedby="edtClntWoCPMidNmLbl">
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 d-flex justify-content-center">Gender</span>
                                <select class="form-select" id="edtClntWoCPGender">
                                    <option value="">Please Select</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Unspecified">I prefer not to say</option>
                                </select>
                                <span class="input-group-text col-2 d-flex justify-content-center" id="edtClntWoCPCitizenshipLbl">Citizenship</span>
                                <input type="text" class="form-control w-25" id="edtClntWoCPCitizenship" aria-describedby="edtClntWoCPCitizenshipLbl">
                            </div>
                            <div class="input-group input-group-sm my-1">
                                <span class="input-group-text col-2 justify-content-center" id="edtClntWoCPOtherDetLbl">Other Details</span>
                                <textarea class="form-control" id="edtClntWoCPOtherDet" aria-describedby="edtClntWoCPOtherDetLbl"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <strong>Address</strong>
                <!-- address -->
                <div class="card card-body p-1 my-1 mt-3 shadow p-3 mb-5 bg-white">
                    <a id="edtClntWoCPAddressAdd" class="btn btn-primary btn-sm d-flex justify-content-center mt-2">Create additional Address</a>
                </div>
                <strong>Contact Details</strong>
                <!-- contact details -->
                <div class="card card-body p-1 my-1 mt-3 shadow p-3 mb-5 bg-white">
                    <a id="edtClntWoCPContAdd" class="btn btn-primary btn-sm d-flex justify-content-center mt-2">Create additional Contact</a>
                </div>
                <!-- ============================================= -->
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" id="edtClntWoCPCancel" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-sm btn-success">Update Client</button>
                </div>
            </form>
        </div>
    </div>
    <%- include("../partials/script") %>
    <%- include("../partials/toaster") %>
    <%- include("../partials/imgPreview") %>
    <script src="/js/validation.js"></script>
    <script src="/js/crud.js"></script>
    <script src="/js/client/client-WoCP-edit.js"></script>
<%- include("../partials/footer") %>